<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UrbanAirship.InAppFullscreen"/>

    <style name="UrbanAirship.InAppFullscreen.Layout" />

    <style name="UrbanAirship.InAppFullscreen.DismissButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ua_ic_close_white_18dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/ua_cancel</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.Heading">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.Body">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.ButtonLayout">
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="urbanAirshipStackedSpaceHeight">8dp</item>
        <item name="urbanAirshipSeparatedSpaceWidth">8dp</item>
        <item name="urbanAirshipButtonLayoutResourceId">@layout/ua_iam_fullscreen_button</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UrbanAirship.InAppFullscreen.Footer">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>
</resources>
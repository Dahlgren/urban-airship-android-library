<?xml version="1.0" encoding="utf-8"?>
<com.urbanairship.iam.banner.BannerDismissLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/banner"
        style="@style/UrbanAirship.InAppBanner.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/banner_pull"
            style="@style/UrbanAirship.InAppBanner.Pull"/>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                style="@style/UrbanAirship.InAppBanner.Image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:src="@drawable/ua_ic_image_placeholder"/>

            <com.urbanairship.iam.view.InAppTextView
                android:id="@+id/heading"
                style="@style/UrbanAirship.InAppBanner.Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                tools:text="Banner Heading"/>

            <com.urbanairship.iam.view.InAppTextView
                android:id="@+id/body"
                style="@style/UrbanAirship.InAppBanner.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/heading"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                tools:text="Banner Body Banner Body Banner Body Banner Body Banner Body Banner Body Banner Body Banner Body"/>

        </RelativeLayout>


        <com.urbanairship.iam.view.InAppButtonLayout
            android:id="@+id/buttons"
            style="@style/UrbanAirship.InAppBanner.ButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</com.urbanairship.iam.banner.BannerDismissLayout>